{
  "compilerOptions": {
    "target": "ES2020", // Use a compatible ES version
    "module": "CommonJS", // Use CommonJS for Jest
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist", // Ensure code is compiled to the dist folder
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
